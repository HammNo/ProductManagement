@using ProductManagement.DAL.Entities
@using Toolbox.Enums
@model ClientEditViewModel

@{
    ViewData["Title"] = "Modification de client";
}

<h1>Modification</h1>

<hr />

<div>
    <p>
        <a class="btn btn-primary" asp-controller="Client" asp-action="Index">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
            </svg>
        </a>
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reference" class="control-label">Référence</label>
                <input asp-for="Reference" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Prénom</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nom</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label">Adresse mail</label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedGender" class="control-label">Genre</label>
                <select asp-for="SelectedGender" class="form-control">
                    @{
                        List<GenderType> allGenders = Enum.GetValues(typeof(GenderType)).Cast<GenderType>().ToList();
                        foreach(GenderType gender in allGenders)
                        {
                            <option value="@((int)gender)">@DescriptionAttribute.GetValue(gender)</option>
                        }
                    }
                </select>
                <span asp-validation-for="SelectedGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <br />
                <input type="submit" value="Modifier" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
