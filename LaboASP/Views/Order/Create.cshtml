@model ProductManagement.ASP.Models.OrderVM.OrderCreateViewModel

@{
    ViewData["Title"] = "Création";
}

<h1>Création de commande</h1>

<hr />

<div>
    <p>
        <a class="btn btn-primary" asp-controller="Order" asp-action="Index">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
            </svg>
        </a>
    </p>
</div>

<div class="row">
    <div class="col-lg-7">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-inline-flex align-items-center">
                <input size=35 placeholder="Client..." autocomplete="off" class="form-control" list="clientsList" id="clientInput" />
                <input type="hidden" list="clientsList" asp-for="ClientId" id="hiddenInput" />
                <datalist id="clientsList"></datalist>
            </div>
            <br />
            <br />
            <br />
            <div>
                <a class="btn btn-primary addOLine" href="">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                    </svg>
                </a>
            </div>
            <br />
            <table class="table table-striped table-bordered table-hover"
                   data-toggle="table"
                   data-classes="table table-hover table-condensed"
                   data-striped="true"
                   data-sort-name="reference"
                   data-sort-order="asc">
                <thead>
                    <tr>
                        <th data-field="product" data-sortable="true" class="w-40">
                            Produit
                        </th>
                        <th data-field="quantity" data-sortable="true" class="w-20">
                            Quantité
                        </th>
                        <th class="text-center w-40">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="OLTable">

                </tbody>
            </table>
            <select hidden multiple asp-for="OrderLines" id="hiddenOLSelect">
            </select>
            <div>
                <br />
                <input type="submit" value="Créer" class="btn btn-success" id="createSubmit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_AddOLLayout");
        <script>
            OCAutoComplete();
        </script>
    }
}
