@model IEnumerable<OrderIndexViewModel>

@{
    ViewData["Title"] = "Commandes";
}

<h1>Commandes</h1>

<hr />

<div class="inlineOptions">
    <p>

    </p>
    <p>
        <a class="btn btn-primary" asp-controller="Order" asp-action="Create">
            Ajouter
        </a>
    </p>
</div>

<table class="table table-striped table-bordered table-hover"
       data-toggle="table"
       data-classes="table table-hover table-condensed"
       data-striped="true"
       data-sort-name="reference"
       data-sort-order="asc">
    <thead>
        <tr>
            <th data-field="reference" data-sortable="true" class="w-15">
                Référence
            </th>
            <th data-field="status" data-sortable="true" class="w-15">
                Statut
            <th data-field="clientName" data-sortable="true" class="w-35">
                Client
            </th>
            <th class="text-center w-35">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="w-15">
                    @item.Reference
                </td>
                <td class="w-15">
                    @item.Status
                </td>
                <td class="w-35">
                    @item.ClientName
                </td>
                <td class="text-center w-35">
                    <a class="btn btn-warning" asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                    <a class="btn btn-danger delProd" data-bs-target="#deleteModal" data-bs-toggle="modal" href="/Order/Delete/@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-trash3" viewBox="0 0 16 16">
                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    @{
        <script src="https://unpkg.com/bootstrap-table@1.20.2/dist/bootstrap-table.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
        await Html.RenderPartialAsync("_DeleteLayout");
        await Html.RenderPartialAsync("_DetailsLayout");
    }
    }